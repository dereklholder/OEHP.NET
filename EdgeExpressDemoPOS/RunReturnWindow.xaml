<Window x:Class="EdgeExpressDemoPOS.RunReturnWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EdgeExpressDemoPOS"
        mc:Ignorable="d"
        Title="RunReturnWindow" Height="87.805" Width="237.073" WindowStyle="None">
    <Grid>
        <TextBlock x:Name="ReturnTextBlock" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="This will run a return for:" VerticalAlignment="Top"/>
        <TextBox x:Name="amountBox" HorizontalAlignment="Left" Height="23" Margin="144,7,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="78" IsReadOnly="True"/>
        <Button x:Name="continueButton" Content="Continue" HorizontalAlignment="Left" Margin="10,48,0,0" VerticalAlignment="Top" Width="75" Click="continueButton_Click"/>
        <Button x:Name="cancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="144,48,0,0" VerticalAlignment="Top" Width="75" Click="cancelButton_Click"/>
    </Grid>
</Window>
