<Window x:Class="EdgeExpressDemoPOS.ChangeUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EdgeExpressDemoPOS"
        mc:Ignorable="d"
        Title="Login" Height="105.366" Width="184.39" WindowStyle="ToolWindow">
    <Grid>
        <Label x:Name="ClerkIDLabel" Content="Clerk ID:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="73,12,0,0" TextWrapping="Wrap" Text="{Binding Source={x:Static local:Globals.Default}, Path=ClerkID}" VerticalAlignment="Top" Width="93"/>
        <Button x:Name="Login" Content="Login" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Width="75" Click="Login_Click"/>
        <Button x:Name="Cancel" Content="Cancel" HorizontalAlignment="Left" Margin="90,41,0,0" VerticalAlignment="Top" Width="75" Click="Cancel_Click"/>

    </Grid>
</Window>
